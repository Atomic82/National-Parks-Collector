<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <p>From the collection of <%= park.owner.name %></p>
  <h1><%= park.name %> 🏞</h1>
  <h2>This park <%= park.visited ? "I have visited!" : "I haven't been to yet!🤨" %></h2>
  <% if (user) { %>
    <form 
    action="/parks/<%= park._id %>/flip-visited?_method=PATCH"
    method="POST"
    >
  <button class="btn" type="submit">
    Make park <%= park.visited ? "I haven't been to yet!🤨" : "I have visited!" %>
  </button>
</form>
<% if (park.owner.equals(user?.profile._id)) { %> 
  <form action="/parks/<%= park._id %>/edit" method="GET">
    <button class="btn" type="submit">Edit this park </button>
  </form>
<% } %>

  <form action="/parks/<%= park._id %>?_method=DELETE" method="POST">
    <button class="btn" type="submit">Delete this park </button>
  </form>
<% } %>
</section>

<%- include('../partials/footer') %>